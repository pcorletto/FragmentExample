<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context=".MainActivity"
             tools:ignore="MergeRootFrame"
             android:layout_gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Fragment"
        android:id="@+id/btnSimpleFragment"
        android:layout_gravity="center_horizontal"
        android:onClick="simple"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiple Fragment"
        android:id="@+id/btnMultipleFragment"
        android:layout_gravity="center_horizontal"
        android:onClick="multiple"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment with View Pager"
        android:id="@+id/buttonViewPager"
        android:layout_gravity="center_horizontal"
        android:onClick="pager"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
